{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    // "module": "nodenext",
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}